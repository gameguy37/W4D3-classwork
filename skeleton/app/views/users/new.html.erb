<h1>Sign Up</h1>
<br><br>

<form action="<%= users_url%>" method="POST">
    <input
        type="hidden"
        name="authenticity_token"
        value="<%= form_authenticity_token%>">

    <label for="username">Username</label>
        <input 
            type="text"
            name="user[user_name]"
            id="username"
            value="">

    <label for="password">Password</label>
        <input 
            type="password"
            name="user[password]"
            id="password"
            value="">

    <input
        type="submit"
        value="Create User">
</form>